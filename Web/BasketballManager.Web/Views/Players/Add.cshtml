@using BasketballManager.Data.Models
@model BasketballManager.Web.ViewModels.Players.AddPlayerViewModel
@{
    this.ViewData["Title"] = "Add Players";
}

    <form enctype="multipart/form-data" asp-controller="Players" asp-action="Add" method="post">

        <div class="form-row">
            <div class="col">
                <input asp-for="Name" class="form-control" placeholder="Name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="col">
                <input asp-for="Age" class="form-control" placeholder="Age">
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
        </div>
        <hr />
        <div class="form-row">
            <div class="col">
                <input asp-for="Height" class="form-control" placeholder="Height in cm">
                <span asp-validation-for="Height" class="text-danger"></span>
            </div>
            <div class="col">
                <input asp-for="Kilos" class="form-control" placeholder="Kilograms">
                <span asp-validation-for="Kilos" class="text-danger"></span>
            </div>
        </div>
        <hr />
        <div class="form-row">
            <div class="col">
                <input asp-for="Number" class="form-control" placeholder="Number">
                <span asp-validation-for="Number" class="text-danger"></span>
            </div>
            <div class="col">
                <select asp-for="PositionType" class="form-control" asp-items="Html.GetEnumSelectList<PositionType>()"></select>
                <span asp-validation-for="PositionType" class="text-danger"></span>
            </div>
        </div>
        <hr />
        <div class="form-row">
            <div class="col-md-6">
                <label asp-for="ProfileImage" class="control-label"></label>
                <div class="custom-file">
                    <input asp-for="ProfileImage" class="custom-file-input" id="customFile">
                    <label class="custom-file-label" for="customFile">Choose file</label>
                    <span asp-validation-for="ProfileImage" class="text-danger"></span>
                </div>              
            </div>
        </div>

        <hr />
        <div class="text-center">
            <div class="text-center">
                <input type="submit" value="Submit" class="btn btn-success" />
            </div>
        </div>
    </form>




