@using BasketballManager.Data.Models
@model BasketballManager.Web.ViewModels.Players.AddPlayerViewModel
@{
    this.ViewData["Title"] = "Add Players";
}

<html lang="en">
<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/css/bootstrap.min.css" integrity="sha384-rwoIResjU2yc3z8GV/NPeZWAv56rSmLldC3R/AZzGRnGxQQKnKkoFVhFQhNUwEyJ" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.1.1.slim.min.js" integrity="sha384-A7FZj7v+d/sdmMqp/nOQwliLvUsJfDHW+k9Omg/a/EheAdgtzNs3hpfag6Ed950n" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/tether/1.4.0/js/tether.min.js" integrity="sha384-DztdAPBWPRXSA/3eYEEUWrWCy7G5KFbe8fFjk5JAIxUYHKkDx6Qin1DkWx51bBrb" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/js/bootstrap.min.js" integrity="sha384-vBWWzlZJ8ea9aCX4pEW3rVHjgjt7zpkNpZk+02D9phzyeVkE+jo0ieGizqPLForn" crossorigin="anonymous"></script>
</head>
<body>
    <form enctype="multipart/form-data" asp-controller="Players" asp-action="Add" method="post">

        <div class="form-row">
            <div class="col">
                <input asp-for="Name" class="form-control" placeholder="Name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="col">
                <input asp-for="Age" class="form-control" placeholder="Age">
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
        </div>
        <hr />
        <div class="form-row">
            <div class="col">
                <input asp-for="Height" class="form-control" placeholder="Height in cm">
                <span asp-validation-for="Height" class="text-danger"></span>
            </div>
            <div class="col">
                <input asp-for="Kilos" class="form-control" placeholder="Kilograms">
                <span asp-validation-for="Kilos" class="text-danger"></span>
            </div>
        </div>
        <hr />
        <div class="form-row">
            <div class="col">
                <input asp-for="Number" class="form-control" placeholder="Number">
                <span asp-validation-for="Number" class="text-danger"></span>
            </div>
            <div class="col">
                <select asp-for="PositionType" class="form-control" asp-items="Html.GetEnumSelectList<PositionType>()"></select>
                <span asp-validation-for="PositionType" class="text-danger"></span>
            </div>
        </div>
        <hr />
        <div class="form-row">
            <div class="col-md-6">
                <div class="custom-file">
                    <input asp-for="ProfileImage" type="file" class="custom-file-input" id="ProfileImage">
                    <label class="custom-file-label" for="ProfileImage">Choose file</label>
                    <span asp-validation-for="ProfileImage" class="text-danger"></span>
                </div>
            </div>
        </div>

        <hr />
        <div class="text-center">
            <div class="text-center">
                <input type="submit" value="Submit" class="btn btn-success" />
            </div>
        </div>
    </form>

    <script>
        $('#ProfileImage').on('change', function () {
            //get the file name
            var fileName = $(this).val();
            //replace the "Choose a file" label
            $(this).next('.custom-file-label').html(fileName);
        })
    </script>
</body>
</html>




