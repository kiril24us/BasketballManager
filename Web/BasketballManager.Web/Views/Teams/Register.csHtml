@model BasketballManager.Web.ViewModels.Teams.RegisterMyTeamViewModel
@{
    this.ViewData["Title"] = "Register Team";
}

<h2 class="text-center">Create your team by filling all the information!</h2>

<div class="col-md-4">
    <form asp-controller="Teams" asp-action="Register" method="post">
        <div>
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div>
            <label asp-for="Owner"></label>
            <input asp-for="Owner" class="form-control" />
            <span asp-validation-for="Owner" class="text-danger"></span>
        </div>

        <div>
            <label asp-for="Coach"></label>
            <input asp-for="Coach" class="form-control" />
            <span asp-validation-for="Coach" class="text-danger"></span>
        </div>

        <div class="text-capitalize">
            <br>Is this your Team or an Opponent?<br>
        </div>
        <div>
            <input type="radio" value="1" id="IsManaged" name="IsManaged" /> MyTeam<br />
            <span asp-validation-for="IsManaged" class="text-danger"></span>
        </div>
        <div>
            <input type="radio" value="0" id="IsManaged" name="IsManaged" /> Opponent Team<br />
            <span asp-validation-for="IsManaged" class="text-danger"></span>
        </div>
        <hr />

        <input type="submit" value="Submit" class="btn btn-success" />
    </form>
</div>

